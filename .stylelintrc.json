{
  "extends": ["stylelint-config-recommended-vue/scss"],
  "plugins": ["stylelint-order"],
  "rules": {
    "property-no-vendor-prefix": true,
    "selector-class-pattern": null,
    "order/properties-alphabetical-order": true
  },
  "overrides": [
    {
      "files": ["*.scss", "**/*.scss"],
      "customSyntax": "postcss-scss"
    }
  ]
}
